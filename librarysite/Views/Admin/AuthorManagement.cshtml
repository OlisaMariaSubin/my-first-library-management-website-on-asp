
@{
    ViewData["Title"] = "AuthorManagement";
}

@model librarysite.Models.AuthorViewModel


<div class="container-fluid">
    <div class="row">
        
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Author Details</h4>
                            <img src="~/imgs/memlogin.jpg" width="150px" />
                            <hr />
                        </div>
                    </div>

                    <form asp-action="SearchAuthor" method="get" class="mb-3">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Authorid" class="form-label">Author ID</label>
                                    <div class="input-group">
                                        <input typeof="text" name="authorid" class="form-control" placeholder="enter id">
                                        <button typeof="submit" class="btn btn-primary">Go</button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Authorname" class="form-label">Author Name</label>
                                    <div class="input-group">
                                        <input asp-for="Authorname" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 text-center">
                                <button type="submit" class="btn btn-success w-100 btn-lg">Add</button>
                            </div>
                            <div class="col-md-4 text-center">
                                <button type="submit" class="btn btn-info w-100 btn-lg">Update</button>
                            </div>
                            <div class="col-md-4 text-center">
                                <button type="submit" class="btn btn-danger w-100 btn-lg">Delete</button>
                            </div>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a class="btn btn-link" asp-area="" asp-controller="Home" asp-action="Index">>>Back to Home</a>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>List of Books</h4>
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <h5 class="text-center">Issued Books</h5>
                            <table class="table table-striped table-hover text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Book ID</th>
                                        <th>Book</th>
                                        <th>Author Name</th>
                                    </tr>
                                </thead>
                               
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

