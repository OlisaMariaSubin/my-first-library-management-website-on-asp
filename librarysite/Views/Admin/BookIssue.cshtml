@{
    ViewData["Title"] = "AuthorManagement";
}

@model librarysite.Models.BookIssueViewModel


<div class="container-fluid">
    <div class="row">

        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Book Details</h4>
                            <img src="~/imgs/cartoon-style-book-logo-illustration-no-background-perfect-for-print-on-demand-free-png.webp" width="150px" />
                            <hr />
                        </div>
                    </div>

                    <form asp-action="SearchAuthor" method="get" class="mb-3">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                  
                                    <div class="form-group">
                                        <label asp-for="Memberid">Member ID</label>
                                        <input asp-for="Memberid" class=" form-control" placeholder="Enter ID" />
                                        <span asp-validation-for="Memberid" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="BookId" class="form-label">Book Id</label>

                                    <div class="input-group">
                                        <input typeof="text" name="BookId" class="form-control" placeholder="enter id">
                                        <button typeof="submit" class="btn btn-primary">Go</button>
                                    </div>
                                    
                                </div>
                            </div>

                        </div>

                        <div class="row mb-3">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Membername" class="form-label">Member Name</label>

                                    <div class="input-group">
                                        <input asp-for="Membername" class="form-control" readonly>
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Bookname" class="form-label">Book Name</label>

                                    <div class="input-group">
                                        <input asp-for="Bookname" class="form-control" readonly>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="row mb-3">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="StartDate" class="form-label">Startdate</label>

                                    <div class="input-group">
                                        <input asp-for="StartDate" class="form-control">
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="DueDate" class="form-label">End Date</label>

                                    <div class="input-group">
                                        <input asp-for="DueDate" class="form-control">
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="row mb-6">
                            <div class="col-md-6 text-center">
                                <button type="submit" class="btn btn-success w-100 btn-lg">Issue</button>
                            </div>
                            
                            <div class="col-md-6 text-center">
                                <button type="submit" class="btn btn-danger w-100 btn-lg">Return</button>
                            </div>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a class="btn btn-link" asp-area="" asp-controller="Home" asp-action="Index">>>Back to Home</a>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Issued Book List</h4>
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                           
                            <table class="table table-striped table-hover text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Book ID</th>
                                        <th>Book</th>
                                        <th>Author Name</th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

